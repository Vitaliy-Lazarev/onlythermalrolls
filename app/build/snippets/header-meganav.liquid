{% assign limit = meganavLimit | times: 1 %}
{% assign columnCount = 0 %}

{% if linklists[meganavListOne].title.size > 0 %}
  {% assign columnCount = columnCount | plus: 1 %}
{% endif %}

{% if linklists[meganavListTwo].title.size > 0 %}
  {% assign columnCount = columnCount | plus: 1 %}
{% endif %}

{% if linklists[meganavListThree].title.size > 0 %}
  {% assign columnCount = columnCount | plus: 1 %}
{% endif %}

<!-- Mega navigation
============================================= -->
<section class="mega-nav">
  <div class="mega-nav-wrap content-area">

      <!-- Main mega list
      ++++++++++++++++++++++++++++ -->
      <ul class="main-list mega-nav-list clearfix">
        {% if linklists[meganavListOne].title.size > 0 %}
        <li class="list first clearfix">

          <h2 class="label">
            {{ linklists[meganavListOne].title }}
          </h2>
          <ul data-list="{{ linklists[meganavListOne].handle }}" class="list-wrap">
            {% for link in linklists[meganavListOne].links %}

              {% if forloop.index < limit or columnCount == 1 %}
                {% capture link_handle %}{{ link.title | handle }}{% endcapture %}
                {% assign hasCategory = false %}
                {% if linklists[link_handle] and linklists[link_handle].links.size > 0 %} {% assign hasCategory = true %} {% endif %}

                <li class="list-item {{ topLevelColumns }}"><a data-category="{{ link.title | handleize }}" class="item {% if hasCategory %}has-category{% endif %}" href="{{ link.url }}">{{ link.title }}{% if hasCategory %}<span class="more-icon">+</span>{% endif %}</a></li>
              {% elsif forloop.index == limit %}
                <li class="list-item {{ topLevelColumns }}"><a class="item show-more" href="#">{{ 'layout.header.more' | t }}</a></li>
              {% endif %}

            {% endfor %}
          </ul>

        </li>{% endif %}{% if linklists[meganavListTwo].title.size > 0 %}<li class="list clearfix">

            <h2 class="label">
              {{ linklists[meganavListTwo].title }}
            </h2>
            <ul data-list="{{ linklists[meganavListTwo].handle }}" class="list-wrap">
              {% for link in linklists[meganavListTwo].links %}

                {% if forloop.index < limit %}
                  {% capture link_handle %}{{ link.title | handle }}{% endcapture %}
                  {% assign hasCategory = false %}
                  {% if linklists[link_handle] and linklists[link_handle].links.size > 0 %} {% assign hasCategory = true %} {% endif %}

                  <li class="list-item {{ topLevelColumns }}"><a data-category="{{ link.title | handleize }}" class="item {% if hasCategory %}has-category{% endif %}" href="{{ link.url }}">{{ link.title }}{% if hasCategory %}<span class="more-icon">+</span>{% endif %}</a></li>
                {% elsif forloop.index == limit %}
                  <li class="list-item {{ topLevelColumns }}"><a class="item show-more" href="#">{{ 'layout.header.more' | t }}</a></li>
                {% endif %}

              {% endfor %}
            </ul>

        </li>{% endif %}{% if linklists[meganavListThree].title.size > 0 %}<li class="list clearfix">

          <h2 class="label">
            {{ linklists[meganavListThree].title }}
          </h2>
          <ul data-list="{{ linklists[meganavListThree].handle }}" class="list-wrap">
            {% for link in linklists[meganavListThree].links %}

              {% if forloop.index < limit %}
                {% capture link_handle %}{{ link.title | handle }}{% endcapture %}
                {% assign hasCategory = false %}
                {% if linklists[link_handle] and linklists[link_handle].links.size > 0 %} {% assign hasCategory = true %} {% endif %}

                <li class="list-item {{ topLevelColumns }}"><a data-category="{{ link.title | handleize }}" class="item {% if hasCategory %}has-category{% endif %}" href="{{ link.url }}">{{ link.title }}{% if hasCategory %}<span class="more-icon">+</span>{% endif %}</a></li>
              {% elsif forloop.index == limit %}
                <li class="list-item {{ topLevelColumns }}"><a class="item show-more" href="#">{{ 'layout.header.more' | t }}</a></li>
              {% endif %}

            {% endfor %}
          </ul>

        </li>{% endif %}
      </ul>

      <!-- Expanded mega list
      ++++++++++++++++++++++++++++ -->
      <ul class="expanded-list mega-nav-list clearfix">

        {% if meganavListOne != 'none' %}<li class="back"></li><li data-list="{{ linklists[meganavListOne].handle }}" class="list {% include 'for-looper' %} clearfix">

          <h2 class="label">{{ linklists[meganavListOne].title }}</h2>
          <ul class="list-wrap">
            {% for link in linklists[meganavListOne].links %}

              {% capture link_handle %}{{ link.title | handle }}{% endcapture %}
              {% assign hasCategory = false %}
              {% if linklists[link_handle] and linklists[link_handle].links.size > 0 %} {% assign hasCategory = true %} {% endif %}

              <li class="list-item">
                <a data-category="{{ link.title | handleize }}" class="item {% if hasCategory %}has-category{% endif %}" href="{{ link.url }}">{{ link.title }}{% if hasCategory %}<span class="more-icon">+</span>{% endif %}</a>
              </li>

            {% endfor %}
          </ul>

        </li>{% endif %}{% if meganavListTwo != 'none' %}<li data-list="{{ linklists[meganavListTwo].handle }}" class="list {% include 'for-looper' %} clearfix">

          <h2 class="label">{{ linklists[meganavListTwo].title }}</h2>
          <ul class="list-wrap">
            {% for link in linklists[meganavListTwo].links %}

              {% capture link_handle %}{{ link.title | handle }}{% endcapture %}
              {% assign hasCategory = false %}
              {% if linklists[link_handle] and linklists[link_handle].links.size > 0 %} {% assign hasCategory = true %} {% endif %}

